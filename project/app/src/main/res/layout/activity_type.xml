<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.bas.project.ActivityType">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" >

        <!-- Player 1 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal">

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/progress_1"
                android:layout_width="300dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:paddingTop="4dp"
                app:rcBackgroundColor="@color/colorBGdark"
                app:rcBackgroundPadding="0dp"
                app:rcMax="1"
                app:rcProgress="0.4"
                app:rcProgressColor="@color/color1"
                app:rcRadius="5dp"
                app:rcReverse="false" />

            <TextView
                android:id="@+id/wpm_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/color1"
                android:textSize="12sp"
                android:text="100 WPM"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="@color/color1"
            android:text="Player 1"
            android:textSize="10sp"/>

        <!-- Player 2 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal">

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/progress_2"
                android:layout_width="300dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:paddingTop="4dp"
                app:rcBackgroundColor="@color/colorBGdark"
                app:rcBackgroundPadding="0dp"
                app:rcMax="1"
                app:rcProgress="0.6"
                app:rcProgressColor="@color/color2"
                app:rcRadius="5dp"
                app:rcReverse="false" />

            <TextView
                android:id="@+id/wpm_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/color2"
                android:textSize="12sp"
                android:text="100 WPM"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="@color/color2"
            android:text="Player 2"
            android:textSize="10sp"/>

        <!-- Player 3 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal">

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/progress_3"
                android:layout_width="300dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:paddingTop="4dp"
                app:rcBackgroundColor="@color/colorBGdark"
                app:rcBackgroundPadding="0dp"
                app:rcMax="1"
                app:rcProgress="0.45"
                app:rcProgressColor="@color/color3"
                app:rcRadius="5dp"
                app:rcReverse="false" />

            <TextView
                android:id="@+id/wpm_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/color3"
                android:textSize="12sp"
                android:text="100 WPM"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/player3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="@color/color3"
            android:text="Player 3"
            android:textSize="10sp"/>

        <!-- Player 4 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal">

            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:id="@+id/progress_4"
                android:layout_width="300dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:paddingTop="4dp"
                app:rcBackgroundColor="@color/colorBGdark"
                app:rcBackgroundPadding="0dp"
                app:rcMax="1"
                app:rcProgress="0.29"
                app:rcProgressColor="@color/color4"
                app:rcRadius="5dp"
                app:rcReverse="false" />

            <TextView
                android:id="@+id/wpm_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/color4"
                android:textSize="12sp"
                android:text="100 WPM"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/player4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="@color/color4"
            android:text="Player 4"
            android:textSize="10sp"/>

        <!-- Timer and button -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="gravity"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:text="TIME: 0:00.00" />

            <Button
                android:id="@+id/resultsButton"
                android:onClick="goToResults"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:text="Results"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:padding="5dp"
            android:gravity="bottom"
            android:textColor="@color/colorWhite"
            android:text="Rey develops her newly discovered abilities with the guidance of Luke Skywalker, who is unsettled by the strength of her powers. Meanwhile, the Resistance prepares to do battle with the First Order."/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:hint="Skywalker"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
